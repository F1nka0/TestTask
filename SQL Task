CREATE TABLE PRODUCT(
ID INT PRIMARY KEY,
PRODUCTNAME VARCHAR(20) NOT NULL
)
CREATE TABLE CATEGORY(
ID INT PRIMARY KEY,
CATEGORYNAME VARCHAR(20) NOT NULL
)
CREATE TABLE PRODUCTCATEGORY(
PRODID INT REFERENCES PRODUCT(ID) NULL,
CATID INT REFERENCES CATEGORY(ID)NULL,
ID INT PRIMARY KEY
)

INSERT INTO PRODUCT
VALUES 
(1,'bread'),
(2,'tie'),
(3,'cpu'),
(4,'cement')

INSERT INTO CATEGORY
VALUES 
(1,'clothes'),
(2,'computer electronics'),
(3,'food')

INSERT INTO PRODUCTCATEGORY
(PRODID,CATID,ID)
VALUES
(1,3,1),
(2,1,2),
(3,2,3),
(4,NULL,4)

SELECT PRODUCT.PRODUCTNAME AS [PRODUCT] , CAT.CATEGORYNAME AS [CATEGORY]
FROM PRODUCT
LEFT JOIN (
SELECT CATEGORY.CATEGORYNAME , PRODUCTCATEGORY.ID 
FROM CATEGORY LEFT JOIN PRODUCTCATEGORY ON CATEGORY.ID = PRODUCTCATEGORY.CATID
) AS CAT
ON PRODUCT.ID = CAT.ID
